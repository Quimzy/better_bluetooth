doctype html
html(lang="en")
	head
		meta(charset='utf-8')
		meta(name='viewport' content='width=device-width, initial-scale=1')
		title Better Bluetooth
	
	body(onload="get_name()")
		button(onclick="location.href = '/send'") Send
		button(onclick="location.href = '/receive'" style='display:inline') Receive

		p(id="error")


	script.
		function get_name(){
			let name = document.cookie.split('name=')[1] 
			let error = ""

			if (name === undefined){
				name = prompt("Please enter your name: ")
				
				if (name == "" || name == null){
					error = "Can't select an empty user"
				} else {
					document.cookie = `name=${name}`
				}

			}

			document.getElementById("error").innerHTML = error;
		}